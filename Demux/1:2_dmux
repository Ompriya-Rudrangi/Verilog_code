initial begin
  $monitor ("sel=%b,i=%b,y0=%b,y1=%b",sel,i,y0,y1);
  /*i=4'h5;
  repeat (8) begin
sel=$random;*/
    sel=0; i=0; #1;
    sel=0; i=1; #1;
    sel=1; i=0; #1;
    sel=1; i=1; #1;
  end
//end
endmodule 
