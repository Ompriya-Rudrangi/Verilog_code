//------------------------------------------------------design-----------------------------------------------------------------------
module demux_1_2 (input sel,i,output y0,y1);
  //assign {y0,y1}=sel&&i;
//or
  assign {y0,y1}=sel?{1'b0,i}:{i,1'b1};
endmodule 
//-------------------------------------------------------test_bench------------------------------------------------------------------
